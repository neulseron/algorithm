#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

/************************************************/
/*baekjoon 1931 : 회의실배정					*/
/*algorithm : Greedy Algorithm					*/
/************************************************/

bool compare(const pair<int, int>& a, const pair<int, int>& b)
{
	if (a.second == b.second)
	{
		return a.first < b.first;
	}
	return (a.second < b.second);
}

int main(int argc, char** argv)
{
	int N, answer;
	cin >> N;
	vector<pair<int, int>> allTime;
	vector<pair<int, int>> timeTable;
	//timeTable 입력
	for (int index = 0; index < N; ++index)
	{
		int start, finish;
		cin >> start >> finish;
		allTime.push_back(make_pair(start, finish));
	}

	sort(allTime.begin(), allTime.end(), compare);
	
	timeTable.push_back(allTime.front());
	for (int index = 1; index < N; ++index)
	{
		if (timeTable.back().second <= allTime[index].first)
		{
			timeTable.push_back(allTime[index]);
		}
	}
	answer = timeTable.size();
	cout << answer<<endl;
	return 0;
}
